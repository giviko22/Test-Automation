from selenium import webdriver
from allure_commons.types import AttachmentType
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import allure
import time
import pytest

class Test:

    def test_14(self):
          self.driver = webdriver.Chrome("C:\Program Files (x86)\chromedriver.exe")
          self.driver.get("https://tbcpay.ge/")
          link = self.driver.find_element_by_name("searchWord")
          link.click()
          link.send_keys("მობილური")

          allure.attach(self.driver.get_screenshot_as_png(), name="testLoginScreen",
                        attachment_type=AttachmentType.PNG)

          link = self.driver.find_element_by_partial_link_text("მობილური ბალანსის შევსება")

          allure.attach(self.driver.get_screenshot_as_png(), name="testLoginScreen",
                        attachment_type=AttachmentType.PNG)

          time.sleep(5)

          self.driver.close()
